<Window x:Name="MainForm" x:Class="Windows_Highlighting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Windows_Highlighting"
        mc:Ignorable="d"
        Title="Windows Highlighting" Height="350" Width="400" ResizeMode="NoResize" FontFamily="Segoe UI" FontSize="16" WindowStartupLocation="CenterScreen" WindowStyle="None" Background="{x:Null}" AllowsTransparency="True" MouseLeftButtonDown="dragWindow">
    <Border CornerRadius="8" Background="#16213E" BorderThickness="0">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="105*"/>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="32*"/>
                <RowDefinition Height="317*"/>
            </Grid.RowDefinitions>
            <Label Content="Windows Highlighting" FontWeight="Bold" Grid.ColumnSpan="2" Margin="12,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="#FFE94560"/>

        </Grid>
    </Border>
</Window>
